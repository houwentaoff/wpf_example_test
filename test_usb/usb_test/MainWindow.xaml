<Window x:Class="usb_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usb_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="417.6" Width="800">
    <Grid>
        <Button x:Name="test_usb" Content="显示usb信息" HorizontalAlignment="Left" Margin="718.6,347.427,-0.8,0" Width="75.8" Click="view_usb" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center">

        </Button>
        <TextBox Text="{Binding Path=DebugInfo}" x:Name="disp" HorizontalAlignment="Left" Width="718.6" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="download" Content="下载" Margin="718.6,328.187,-0.8,0" VerticalAlignment="Top" Click="DownLoad_Click"/>
        <ProgressBar x:Name="pb" Value="{Binding Path=Percent}" Visibility="Hidden" HorizontalAlignment="Center" Height="10" Margin="0" VerticalAlignment="Center" Width="253.2"/>

    </Grid>
</Window>
